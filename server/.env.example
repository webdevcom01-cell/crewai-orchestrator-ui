# ============================================
# CrewAI Orchestrator Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/crewai_orchestrator?schema=public"

# Google Gemini API
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
API_TIMEOUT_MS=30000
MAX_BACKSTORY_LENGTH=500
MAX_SIMULATION_TOKENS=8000

# Stripe Billing
# Get your keys at: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Create products at: https://dashboard.stripe.com/products
STRIPE_PRO_PRICE_ID=price_your_pro_plan_price_id
STRIPE_BUSINESS_PRICE_ID=price_your_business_plan_price_id
FRONTEND_URL=http://localhost:3000

# SendGrid Email
# Get your key at: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=CrewAI Orchestrator
# Optional: SendGrid Dynamic Template IDs
# SENDGRID_TEMPLATE_WELCOME=d-xxxxxx
# SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxxx
# SENDGRID_TEMPLATE_RUN_COMPLETED=d-xxxxxx
# SENDGRID_TEMPLATE_RUN_FAILED=d-xxxxxx
# SENDGRID_TEMPLATE_INVITATION=d-xxxxxx

# Cloudinary (File Upload)
# Get your credentials at: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
